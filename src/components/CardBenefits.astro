---
import {Image} from "astro:assets";

interface Props {
  icon: any;
  body: string;
  alt: string;
}

const { body, icon, alt } = Astro.props;
---

<div
  class="flex items-center justify-start flex-col gap-y-4 bg-white/5 p-8 text-center rounded-[24px] hover:bg-white/10 transition-all"
>   
  <Image src={icon} alt={alt} height={56} />
  <p class="text-white/50 font-regular text-[16px] text-pretty">{body}</p>
</div>
