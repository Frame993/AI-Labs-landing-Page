---
import heroImg from "../assets/hero.png";
import { Image } from "astro:assets";
import card01 from "../assets/card.png";
import card02 from "../assets/cardTwo.png";
import card03 from "../assets/cardThree.png";

import Layout from "../layouts/Layout.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Button from "../components/Button.astro";
import Arrow from "../components/icons/Arrow.astro";
import Hr from "../components/icons/HR.astro";
import ColoredText from "../components/ColoredText.astro";
import SectionTitle from "../components/SectionTitle.astro";
import Card from "../components/Card.astro";
---

<Layout title="AI Labs">
  <main>
    <SectionContainer
      id="hero"
      className="grid grid-cols-1 md:grid-cols-2 gap-8 h-[90vh] items-center"
    >
      <div class="flex flex-col justify-center gap-y-10">
        <h1>
          Automate. <br />Improve. <br />
          <ColoredText>Succeed.</ColoredText>
        </h1>
        <h4 class="text-white text-[25px] font-regular opacity-50">
          Elevate your company and thrive in the competitive landscape.
        </h4>
        <Hr />
        <Button>
          <p>Get&nbsp;Started</p>
          <Arrow />
        </Button>
      </div>
      <Image src={heroImg} alt="World image" />
    </SectionContainer>
    <SectionContainer id="offers" className="flex flex-col gap-8">
      <SectionTitle title="What We Offer." />
      <div class="card-container grid grid-cols-1 md:grid-cols-3 gap-6">
        <Card
          src={card01}
          alt="Image card01"
          title="Elevating Your Content with Innovation"
          body="Generative AI pioneers innovative content creation, seamlessly crafting fresh and cutting-edge experiences across diverse domains, from images and text to music and code."
        />
        <Card
          src={card02}
          alt="Image card02"
          title="Advanced Prediction and Decision-Making"
          body="Generative AI automates and optimizes business processes across industries, fostering efficiency and innovation."
        />
        <Card
          src={card03}
          alt="Image card03"
          title="Versatile Learning from Varied Data"
          body="Generative AI, trained on diverse datasets, crafts adaptive content echoing the style and structure of the original data with remarkable depth and adaptability."
        />
      </div>
    </SectionContainer>
  </main>
</Layout>
